{
  "name": "fullstack-pertamina-app",
  "version": "1.0.0",
  "description": "Fullstack Pertamina Application with Laravel Backend and Next.js Frontend",
  "main": "start-app.js",
  "scripts": {
    "dev": "npm run dev --prefix pertamina-frontend-build",
    "build": "npm install --prefix pertamina-frontend-build && npm run build --prefix pertamina-frontend-build",
    "start": "npm run start --prefix pertamina-frontend-build",
    "complete": "node start-fullstack.js",
    "structured": "node start-fullstack.js",
    "test": "node --experimental-fetch test-api-connection.js",
    "test:integration": "node test-integration.js",
    "test:final": "node final-test.js"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "dependencies": {
    "api": "^6.1.3",
    "axios": "^1.13.2",
    "node-fetch": "^3.3.2",
    "or": "^0.2.0"
  }
}
